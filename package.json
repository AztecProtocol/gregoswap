{
  "name": "@aztec/playground",
  "packageManager": "yarn@4.5.2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./dist .tsbuildinfo",
    "serve": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "compile-dependencies": "WORKDIR=$(pwd) && cd $HOME/nargo/github.com/AztecProtocol/aztec-packages/v3.0.0-devnet.2/noir-projects/noir-contracts && aztec-nargo compile --package token_contract && aztec-postprocess-contract && cp $HOME/nargo/github.com/AztecProtocol/aztec-packages/v3.0.0-devnet.2/noir-projects/noir-contracts/target/token_contract-Token.json $WORKDIR/contracts/target/token_contract-Token.json",
    "compile-contracts": "cd contracts && aztec-nargo compile && aztec-postprocess-contract",
    "test": "cd contracts && aztec test",
    "preview": "vite preview",
    "deploy:local": "node --experimental-transform-types scripts/deploy.ts --network local",
    "deploy:devnet": "node --experimental-transform-types scripts/deploy.ts --network devnet",
    "formatting": "run -T prettier --check ./src && run -T eslint ./src",
    "formatting:fix": "run -T eslint --fix ./src && run -T prettier -w ./src"
  },
  "dependencies": {
    "@aztec/accounts": "v3.0.0-devnet.2",
    "@aztec/aztec.js": "v3.0.0-devnet.2",
    "@aztec/entrypoints": "v3.0.0-devnet.2",
    "@aztec/foundation": "v3.0.0-devnet.2",
    "@aztec/noir-contracts.js": "v3.0.0-devnet.2",
    "@aztec/pxe": "v3.0.0-devnet.2",
    "@aztec/stdlib": "v3.0.0-devnet.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.3.1",
    "@mui/material": "^6.3.1",
    "@mui/styles": "^6.3.1",
    "buffer-json": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@aztec/test-wallet": "v3.0.0-devnet.2",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "1.49.0",
    "@types/buffer-json": "^2",
    "@types/node": "^22.15.17",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "prettier": "^3.5.3",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.11.0",
    "vite": "^7.1.4",
    "vite-plugin-node-polyfills": "^0.24.0"
  }
}
